{% extends "JackDeckKeeperBundle::layout.html.twig" %}

{% block content %}
    {% for card in cards %}
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-2 col-sm-3 text-center">
                                <a class="story-img" href="#">
                                    <img src="{{ card.imageWebPath }}" style="width:185px;">
                                </a>
                            </div>
                            <div class="col-md-10 col-sm-9">
                                <h3>{{ card.name }}</h3>
                                <div class="row">
                                    <div class="col-xs-9">
                                        <p>{{ card.description }}</p>
                                        <a href="{{ path('frontend_deck_keeper_card', {'slug': card.slug}) }}">
                                            <p class="lead"><button class="btn btn-default">More &DoubleRightArrow;</button></p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock content %}
